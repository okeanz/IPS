<UserControl x:Class="IPS.TableControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             >

    <DockPanel >
        <DockPanel Name="DockInfo"  DockPanel.Dock="Top" HorizontalAlignment="Left" Visibility="Hidden">
            <Label Foreground="White">Format</Label>
            <ComboBox Name="CBFormat" SelectedIndex="1" MaxWidth="100" MaxHeight="50">
                <ComboBoxItem>Flat</ComboBoxItem>
                <ComboBoxItem>Quadro</ComboBoxItem>
            </ComboBox>
        </DockPanel>

        <Grid Name="MainGrid" DockPanel.Dock="Bottom">

        </Grid>

    </DockPanel>
</UserControl>
